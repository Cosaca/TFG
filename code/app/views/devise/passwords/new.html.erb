<!doctype html>
<html lang="es">

<body>

  <nav class="navbar navbar-expand-lg navbar-light" id="navbarLanding">
    <a class="navbar-brand" href="/">
      <img src="/assets/logo.png" width="25" height="25" class="d-inline-block align-top" alt="logo"> CodeCharts
    </a>
  </nav>

  <%= render 'layouts/messages' %>
  
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="shadow p-3 mb-5 bg-light rounded mt-md-5">
            <h2 class="text-center">¿Has olvidado tu contraseña?</h2>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>

                <div class="form-group">
                  <div class="field">
                    <%= f.label :email, "Correo electrónico" %>
                      <br/>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                  </div>
                </div>

                <div class="actions">
                  <%= f.submit "Enviar correo de confirmación", class:"btn btn-primary" %>
                </div>
                <% end %>

                  <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
</body>

</html>