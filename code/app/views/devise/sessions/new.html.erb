<!doctype html>
<html lang="es">

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom border-secondary" id="navbarLanding">
    <a class="navbar-brand" href="/">
      <img src="/assets/logo_navbar.png" width="25" height="25" class="d-inline-block align-top" alt="logo"> CodeCharts
    </a>
  </nav>

  <%= render 'layouts/messages' %>
  <%= devise_error_messages! %>

  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="shadow p-3 mb-5 bg-light rounded mt-md-5">
          <h2 class="text-center">Iniciar sesión</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <div class="field">
                <%= f.label :email, "Correo electrónico" %>
                  <br>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :password, "Contraseña" %>
                  <br>
                  <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "Recuérdame" %>
              </div>
              <% end -%>

                <div class="actions text-center">
                  <%= f.submit "Iniciar sesión", class:"btn btn-primary"%>
                  <br>
                  <%= render "devise/shared/links" %>
                </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</body>

</html>