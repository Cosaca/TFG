<!doctype html>
<html lang="es">

<body>
  <nav class="navbar navbar-expand-lg navbar-dark" id="navbarLanding">
    <a class="navbar-brand" href="/">
      <img src="/assets/logo.png" width="30" height="30" class="d-inline-block align-top" alt="logo"> CodeCharts
    </a>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card" id="signInForm">
          <h2>Iniciar sesión</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <div class="field">
                <%= f.label :email %>
                  <br>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :password, "Contraseña" %>
                  <br>
                  <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "Recuérdame" %>
              </div>
              <% end -%>

                <div class="actions">
                  <%= f.submit "Iniciar sesión", class:"btn btn-dark"%>
                </div>
                <% end %>

              <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</body>

</html>