<!doctype html>
<html lang="es">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Registro - CodeCharts</title>
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom border-secondary" id="navbarLanding">
    <a class="navbar-brand" href="/">
      <img src="/assets/logo.png" width="25" height="25" class="d-inline-block align-top" alt="logo"> CodeCharts
    </a>
  </nav>

  <%= render 'layouts/messages' %>
  <%= devise_error_messages! %>

    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="shadow p-3 mb-5 bg-light rounded mt-md-5">
            <h2 class="text-center">Crear cuenta</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="form-group">
                <div class="field">
                  <%= f.label :first_name, "Nombre" %>
                    <%= f.text_field :first_name, autofocus:"true", class:"form-control", required: true %>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                  <%= f.label :last_name, "Apellidos" %>
                    <%= f.text_field :last_name, class:"form-control", required: true %>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                  <%= f.label :email, "Correo electrónico" %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", required: true%>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                  <%= f.label :password, "Contraseña"%>
                    <%= f.password_field :password, autocomplete: "off", class:"form-control", required: true%>
                      <small id="passwordHelpBlock" class="form-text text-muted">
                        La contraseña debe tener al menos 6 carácteres.
                      </small>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                  <%= f.label :password_confirmation, "Confirmar contraseña" %>
                    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", required: true%>
                </div>
              </div>

              <div class="actions text-center">
                <%= f.submit "Registrarme", class:"btn btn-primary"%>
                  <br>
                  <%= render "devise/shared/links" %>
              </div>
              <% end %>

          </div>
        </div>
      </div>
    </div>
</body>

</html>