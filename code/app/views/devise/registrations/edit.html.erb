<!doctype html>
<html lang="es">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Cursos - CodeCharts</title>
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom border-secondary" id="navbarLanding">
    <a class="navbar-brand" href="/courses">
      <img src="/assets/logo_navbar.png" width="25" height="25" class="d-inline-block align-top" alt="logo"> CodeCharts
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/courses">
            Mis cursos
          </a>
        </li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <div class="dropdown">
          <button class="btn btn-outline-secondary btn-sm dropdown-toggle" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            <%= current_teacher.first_name %>
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
            <%= link_to "Editar perfil", edit_teacher_registration_path, class:"dropdown-item"%>
              <%= link_to "Cerrar sesión", destroy_teacher_session_path, method: :delete, class:"dropdown-item" %>
          </div>
        </div>
      </form>
  </nav>

  <%= devise_error_messages! %>

    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <div class="shadow p-3 mb-5 bg-light rounded mt-md-5">

            <h2 class="text-center">Editar perfil</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

              <div class="row">
                <div class="col">
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :first_name, "Nombre" %>
                        <br />
                        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
                    </div>
                  </div>
                </div>

                <div class="col">
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :last_name, "Apellidos" %>
                        <br />
                        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control" %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                  <%= f.label :email, "Correo electrónico" %>
                    <br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                </div>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for:
                  <%= resource.unconfirmed_email %>
                </div>
                <% end %>

                  <div class="form-group">
                    <div class="field">
                      <%= f.label :password, "Nueva contraseña" %>
                        <strong>(si no hay cambios, dejar en blanco)</strong>
                        <br />
                        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
                          <small id="passwordHelpBlock" class="form-text text-muted">
                            La contraseña debe tener al menos 6 carácteres.
                          </small>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="field">
                      <%= f.label :password_confirmation, "Confirmar nueva contraseña" %>
                        <br />
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="field">
                      <%= f.label :current_password, "Contraseña actual" %>
                        <strong>(*)</strong>
                        <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
                    </div>
                  </div>

                  <div class="actions text-center">
                    <%= f.submit "Actualizar", class:"btn btn-primary btn-sm" %>
                      <%= link_to "Volver", :courses, class:"btn btn-dark btn-sm" %>
                        <% end %>
                  </div>
                  <br>
                  <div>
                    <h5>¿Desea eliminar su cuenta?</h5>
                    <%= button_to "Borrar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro? Una vez borrada, no se podrá volver a recuperar" }, method: :delete, class:"btn btn-danger btn-sm" %>
                  </div>

          </div>
        </div>
      </div>
    </div>
</body>

</html>