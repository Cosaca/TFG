<%= form_for(@courses) do |f| %>
    <div class="form-group">
        <div class="field">
            <%= f.text_field :title, placeholder: "Título del curso", class:"form-control" %>
        </div>
    </div>

    <div class="form-group">
        <div class="field">
            <%= f.text_area :body, placeholder: "Descripción", class:"form-control"%>
        </div>
    </div>

    <div class="actions text-center">
        <%= f.submit "Guardar", class:"btn btn-primary btn-sm"%>
        <%= link_to "Volver", @courses, class:"btn btn-dark btn-sm"%>
        <%= link_to "Eliminar", @courses, method: :delete, class:"btn btn-danger btn-sm"%>
    </div>
<% end %>