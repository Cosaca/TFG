<!doctype html>
<html lang="es">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>CodeCharts</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light" id="navbarLanding">
    <a class="navbar-brand" href="/courses">
      <img src="/assets/logo_navbar.png" width="25" height="25" class="d-inline-block align-top" alt="logo"> CodeCharts
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <p class="my-2 my-sm-0" id="teacherName">Conectado como
          <%= current_teacher.first_name %>
        </p>
        <%= link_to "Cerrar sesión", destroy_teacher_session_path, method: :delete, class:"btn btn-danger"%>
      </form>
  </nav>

  <%= render 'layouts/messages' %>

    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card" id="signInForm">
            <h2>Datos del alumno</h2>
            <%= form_for @user do |f| %>
            <%= hidden_field_tag "curso", @course.id %>
              <div class="form-group">
                <div class="field">
                <%= f.label :first_name, "Nombre" %>
                <br>
                  <%= f.text_field :first_name, class:"form-control" %>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                <%= f.label :last_name, "Apellidos" %>
                <br>
                  <%= f.text_field :last_name, class:"form-control"%>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                <%= f.label :username, "Nombre de usuario" %>
                <br>
                  <%= f.text_field :username, class:"form-control"%>
                </div>
              </div>

              <!--<div class="form-group">
                <div class="field">
                <%= f.label :age, "Edad" %>
                <br>
                  <%= f.text_field :age, class:"form-control"%>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                <%= f.label :total_lines, "Líneas totales" %>
                <br>
                  <%= f.text_field :total_lines, class:"form-control"%>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                <%= f.label :completed_levels, "Niveles completados" %>
                <br>
                  <%= f.text_field :completed_levels, class:"form-control"%>
                </div>
              </div>-->

              <div class="actions">
                <%= f.submit "Crear", class:"btn btn-dark"%>
                  <a href="/courses">
                    <button type="button" class="btn btn-primary">Volver</button>
                  </a>
              </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
</body>

</html>